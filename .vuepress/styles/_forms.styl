.field
    margin 1rem 0

label
    box-sizing border-box
    display block
    padding 0.5rem
    font-size 0.8rem
    background-color $borderColor
    
input
textarea
    box-sizing border-box
    width 100%
    padding 0.5rem
    margin 0
    border 0
    font-size 1.2rem
    background-color $borderColor
    border-bottom 2px solid darken($borderColor, 10%)
    resize none

    &:focus
        outline none
        border-color $accentColor

button
    box-sizing border-box
    width 100%
    padding 1rem 0.5rem
    border none
    text-align center
    background-color $accentColor
    color white
    font-size 1.2rem